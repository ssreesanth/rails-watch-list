<div class="container my-5 w-50">
  <h2 class="mb-4">Bookmarks</h2>

  <h1 class="mb-4">Add a Movie to <%= @list.name %></h1>

  <%= form_with model: [@list, @bookmark], class: "form" do |f| %>
    <div class="form-group mb-3">
      <%= f.label :movie_id, "Select a movie", class: "form-label" %>
      <%= f.collection_select :movie_id, Movie.all, :id, :title, { prompt: "Choose a movie" },  class: "form-select"  %>
    </div>

    <div class="form-group mb-4">
      <%= f.label :comment, class: "form-label" %>
      <%= f.text_field :comment, class: "form-control" %>
    </div>

    <%= f.submit "Add Movie", class: "btn btn-primary" %>
  <% end %>

  <p class="mt-4"><%= link_to "Back to All Lists", lists_path, class: "btn btn-secondary" %></p>
</div>
