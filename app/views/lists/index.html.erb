<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://cdn.dribbble.com/users/722614/screenshots/19045033/media/bd3c0e5fae07d09a57514623188ed14c.jpg)">
  Save any kind of Movies
</div>

<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createListModal">
  Create New List
</button>

<div class="modal fade" id="createListModal" tabindex="-1" aria-labelledby="createListModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="createListModalLabel">Create New List</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <!-- Form inside the modal -->
        <%= simple_form_for @list do |f| %>
          <%= f.input :name, label: "List Name", input_html: { placeholder: "Enter your list name" } %>
          <%= f.submit "Create List", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>


<div class="m-3 d-flex  flex-column  justify-content-center align-items-center">
  <% @lists.each do |list|%>
    <div class="card-category1 mb-3 d-flex justify-content-center ">
    <p><%= link_to list.name, list %></p>
    <p><%= link_to "ğŸš®", list_path(list),
      data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }%></p>
  </div>
  <% end %>
</div>

